<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--全屏-->
    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--闪屏页-->
    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/pic_photo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TranslucentDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--对话框背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--背景是否变暗-->
    </style>


    <!--图片加载主样式-->
    <style name="image_style">
        <!--加载图片比例类型-->
        <item name="actualImageScaleType">focusCrop</item>
        <!--占位图-->
        <item name="placeholderImage">@drawable/img_image_default_l</item>
        <!--占位图比例类型-->
        <item name="placeholderImageScaleType">fitCenter</item>
        <!--加载失败图-->
        <item name="failureImage">@drawable/img_image_default_l</item>
        <!--加载失败图比例类型-->
        <item name="failureImageScaleType">centerInside</item>
        <!--加载重试图比例类型-->
        <item name="retryImageScaleType">centerCrop</item>
        <!--加载时缓冲图比例类型-->
        <item name="progressBarImageScaleType">centerInside</item>
        <!--占位图比例类型-->
        <item name="progressBarAutoRotateInterval">1000</item>
    </style>

    <!--4dp的圆角图片加载样式-->
    <style name="image_round_4dp" parent="image_style">
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">4dp</item>
    </style>

    <!--10dp的圆角图片加载样式-->
    <style name="image_round_10dp" parent="image_style">
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">10dp</item>
    </style>

    <!--圆形图片加载样式-->
    <style name="image_circle" parent="image_style">
        <item name="roundAsCircle">true</item>
    </style>

    <!--标题栏延时-->
    <style name="style_navigation_bar">
        <item name="android:id">@id/navigation_bar</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_bar_height</item>
        <item name="nav_has_divider">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--编辑字体样式-->
    <style name="TalkText.EditText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">#FFF</item>
    </style>

</resources>
